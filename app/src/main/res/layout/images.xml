<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/a1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />

        <ImageView
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />

        <ImageView
            android:id="@+id/a3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />

        <ImageView
            android:id="@+id/a4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />

        <ImageView
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />

        <ImageView
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />

        <ImageView
            android:id="@+id/b4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />

        <ImageView
            android:id="@+id/c2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />

        <ImageView
            android:id="@+id/c3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />

        <ImageView
            android:id="@+id/c4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/android" />


    </LinearLayout>


</LinearLayout>


